<Window x:Class="CombatManager.OGLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OGL" Height="458" Width="522" Icon="Images/d20-32.png" ShowInTaskbar="False">
    <Grid>
        <FlowDocumentScrollViewer Margin="0,0,0,33" Name="OGLViewer">
            <FlowDocumentScrollViewer.Document>
                <FlowDocument />
            </FlowDocumentScrollViewer.Document>
        </FlowDocumentScrollViewer>
        <Rectangle Height="33" Name="rectangle1" VerticalAlignment="Bottom" >
        	<Rectangle.Fill>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        			<GradientStop Color="#FF7E7E7E" Offset="0"/>
        			<GradientStop Color="#FFD2D1D1" Offset="0.124"/>
        		</LinearGradientBrush>
        	</Rectangle.Fill>
        </Rectangle>
        <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,0,4,4" Name="button1" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="button1_Click" />
    </Grid>
</Window>
