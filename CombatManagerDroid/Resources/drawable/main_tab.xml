<?xml version="1.0" encoding="UTF-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/main_tab_light" />
            <stroke
                android:width="1dp"
                android:color="@color/main_tab_dark" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>    
    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="@color/main_tab_light" />
            <stroke
                android:width="1dp"
                android:color="@color/main_tab_dark" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/main_tab_light"
                android:endColor="@color/main_tab_dark"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/main_tab_dark" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
